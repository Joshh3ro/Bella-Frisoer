@page "/bookings/slet"
@using BellaFrisoer.Domain.Models
@using BellaFrisoer.Application.Interfaces
@using BellaFrisoer.Application.Queries;
@inject IBookingQuery BookingQuery;
@inject IBookingService BookingService
@inject NavigationManager NavigationManager

<PageTitle>Slet booking</PageTitle>

<h1>Slet booking</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Booking</h2>
    <hr />
    @if (booking is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">BookingDate</dt>
            <dd class="col-sm-10">@booking.BookingDate</dd>
        </dl>
        <dl class="row">
	        <dt class="col-sm-2">CustomerFirstName</dt>
	        <dd class="col-sm-10">@booking.Customer?.FirstName</dd>
        </dl>
        <dl class="row">
	        <dt class="col-sm-2">CustomerLastName</dt>
	        <dd class="col-sm-10">@booking.Customer?.LastName</dd>
        </dl>
        <EditForm method="post" Model="booking" OnValidSubmit="DeleteBooking" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(booking is null)">Slet</button> |
            <a href="/bookings">Tilbage til listen</a>
        </EditForm>
    }
</div>

@code {
    private Booking? booking;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        booking = await BookingQuery.GetByIdAsync(Id, cancellationToken: default);

        if (booking is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteBooking()
    {
        await BookingService.DeleteBookingAsync(booking);
        NavigationManager.NavigateTo("/bookings");
    }
}
