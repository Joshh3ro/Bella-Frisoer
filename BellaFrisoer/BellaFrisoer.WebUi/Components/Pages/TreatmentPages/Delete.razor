@page "/treatments/delete"
@using Microsoft.EntityFrameworkCore
@using BellaFrisoer.Domain.Models
@inject IDbContextFactory<BellaFrisoer.Infrastructure.Data.BellaFrisoerWebUiContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Treatment</h2>
    <hr />
    @if (Treatment is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Treatment.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ProductNumber</dt>
            <dd class="col-sm-10">@Treatment.ProductNumber</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DurationMinutes</dt>
            <dd class="col-sm-10">@Treatment.DurationMinutes</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">HourlyRate</dt>
            <dd class="col-sm-10">@Treatment.HourlyRate</dd>
        </dl>
        <EditForm method="post" Model="Treatment" OnValidSubmit="DeleteTreatment" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(Treatment is null)">Delete</button> |
            <a href="/Treatments">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Treatment? Treatment;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Treatment = await context.Treatments.FirstOrDefaultAsync(m => m.Id == Id);

        if (Treatment is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteTreatment()
    {
        using var context = DbFactory.CreateDbContext();
        context.Treatments.Remove(Treatment!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/Treatments");
    }
}
