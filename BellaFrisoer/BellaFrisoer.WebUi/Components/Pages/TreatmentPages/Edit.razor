@page "/treatments/edit"
@using Microsoft.EntityFrameworkCore
@using BellaFrisoer.Domain.Models
@inject IDbContextFactory<BellaFrisoer.Infrastructure.Data.BellaFrisoerWebUiContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Treatment</h2>
<hr />
@if (Treatment is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Treatment" OnValidSubmit="UpdateTreatment" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Treatment.Id" value="@Treatment.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="Treatment.Name" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Treatment.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="productnumber" class="form-label">ProductNumber:</label>
                    <InputText id="productnumber" @bind-Value="Treatment.ProductNumber" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Treatment.ProductNumber" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="durationminutes" class="form-label">DurationMinutes:</label>
                    <InputNumber id="durationminutes" @bind-Value="Treatment.DurationMinutes" class="form-control" />
                    <ValidationMessage For="() => Treatment.DurationMinutes" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="hourlyrate" class="form-label">HourlyRate:</label>
                    <InputNumber id="hourlyrate" @bind-Value="Treatment.HourlyRate" class="form-control" />
                    <ValidationMessage For="() => Treatment.HourlyRate" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/Treatments">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Treatment? Treatment { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Treatment ??= await context.Treatments.FirstOrDefaultAsync(m => m.Id == Id);

        if (Treatment is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateTreatment()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Treatment!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!TreatmentExists(Treatment!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/Treatments");
    }

    private bool TreatmentExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Treatments.Any(e => e.Id == id);
    }
}
