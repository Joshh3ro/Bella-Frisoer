@page "/behandlinger/rediger"
@using BellaFrisoer.Application.Interfaces
@using BellaFrisoer.Domain.Models
@inject ITreatmentService TreatmentService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Rediger behandlinger</PageTitle>

<h1>Rediger behandlinger</h1>

<h2>Behandling</h2>
<hr />
@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger" role="alert">@ErrorMessage</div>
}

@if (Treatment is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm Model="Treatment" OnValidSubmit="UpdateTreatment" OnInvalidSubmit="OnInvalidSubmit" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Treatment.Id" value="@Treatment.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="Treatment.Name" class="form-control" aria-required="true"/>
                    <ValidationMessage For="@(() => Treatment.Name)" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="productnumber" class="form-label">ProductNumber:</label>
                    <InputText id="productnumber" @bind-Value="Treatment.ProductNumber" class="form-control" aria-required="true"/>
                    <ValidationMessage For="@(() => Treatment.ProductNumber)" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="durationminutes" class="form-label">DurationMinutes:</label>
                    <InputNumber id="durationminutes" @bind-Value="Treatment.DurationMinutes" class="form-control" />
                    <ValidationMessage For="@(() => Treatment.DurationMinutes)" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="hourlyrate" class="form-label">HourlyRate:</label>
                    <InputNumber id="hourlyrate" @bind-Value="Treatment.HourlyRate" class="form-control" />
                    <ValidationMessage For="@(() => Treatment.HourlyRate)" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/treatments">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Treatment? Treatment { get; set; }

    private string? ErrorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Treatment ??= await TreatmentService.GetByIdAsync(Id);

            if (Treatment is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Load failed: {ex.Message}";
        }
    }

    private void OnInvalidSubmit(EditContext ctx)
    {
        ErrorMessage = "Form is invalid. Please fix validation errors.";
    }

    // Use service to update instead of DbFactory
    private async Task UpdateTreatment()
    {
        try
        {
            await TreatmentService.UpdateTreatmentAsync(Treatment!);
            NavigationManager.NavigateTo("/behandlinger");
        }
        catch (Exception ex)
        {
            // If record no longer exists, navigate to notfound; otherwise rethrow so error surfaces
            try
            {
                var exists = await TreatmentService.GetByIdAsync(Treatment!.Id);
                if (exists is null)
                {
                    NavigationManager.NavigateTo("notfound");
                    return;
                }
            }
            catch
            {
                // ignore lookup errors and rethrow original
            }

            ErrorMessage = $"Save failed: {ex.Message}";
        }
    }
}
