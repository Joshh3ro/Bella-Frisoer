@page "/behandlinger/rediger"
@using BellaFrisoer.Application.Interfaces
@using Microsoft.EntityFrameworkCore
@using BellaFrisoer.Domain.Models
@inject IDbContextFactory<BellaFrisoer.Infrastructure.Data.BellaFrisoerWebUiContext> DbFactory
@inject NavigationManager NavigationManager
@inject ITreatmentService TreatmentService

<PageTitle>Rediger</PageTitle>

<h1>Rediger</h1>

<h2>Behandlinger</h2>
<hr />
@if (Treatment is null)
{
    <p><em>Indlæser...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Treatment" OnValidSubmit="UpdateTreatment" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Treatment.Id" value="@Treatment.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Behandlingsnavn:</label>
                    <InputText id="name" @bind-Value="Treatment.Name" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Treatment.Name" class="text-danger" />
                </div>
                <div class="mb-3">
	                <label for="pris" class="form-label">Pris:</label>
	                <InputNumber id="price" @bind-Value="Treatment.Price" class="form-control" />
	                <ValidationMessage For="() => Treatment.Price" class="text-danger" />
                </div>
                <div class="mb-3">
	                <label for="duration" class="form-label">Varighed:</label>
	                <InputNumber id="duration" @bind-Value="Treatment.Duration" class="form-control" />
	                <ValidationMessage For="() => Treatment.Duration" class="text-danger" />
                </div>

                <button type="submit" class="btn btn-primary">Gem</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/behandlinger">Tilbage</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Treatment? Treatment { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Treatment ??= await context.Treatments.FirstOrDefaultAsync(m => m.Id == Id);

        if (Treatment is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateTreatment()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Treatment!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!TreatmentExists(Treatment!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/Behandlinger");
    }

    private bool TreatmentExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Treatments.Any(e => e.Id == id);
    }
}
