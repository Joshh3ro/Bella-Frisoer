@page "/behandlinger/rediger"
@using BellaFrisoer.Application.Interfaces
@using Microsoft.EntityFrameworkCore // Mulligvis ikke nødvendigt
@using BellaFrisoer.Domain.Models
@inject ITreatmentService TreatmentService
@inject NavigationManager NavigationManager
@inject ITreatmentService TreatmentService

<PageTitle>Rediger</PageTitle>

<h1>Rediger</h1>

<h2>Behandlinger</h2>
<hr />
@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger" role="alert">@ErrorMessage</div>
}

@if (Treatment is null)
{
    <p><em>Indlæser...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm Model="Treatment" OnValidSubmit="UpdateTreatment" OnInvalidSubmit="OnInvalidSubmit" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Treatment.Id" value="@Treatment.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Behandlingsnavn:</label>
                    <InputText id="name" @bind-Value="Treatment.Name" class="form-control" aria-required="true"/>
                    <ValidationMessage For="@(() => Treatment.Name)" class="text-danger" />
                </div>
                <div class="mb-3">
	                <label for="pris" class="form-label">Pris:</label>
	                <InputNumber id="price" @bind-Value="Treatment.Price" class="form-control" />
	                <ValidationMessage For="() => Treatment.Price" class="text-danger" />
                </div>
                <div class="mb-3">
	                <label for="duration" class="form-label">Varighed:</label>
	                <InputNumber id="duration" @bind-Value="Treatment.Duration" class="form-control" />
	                <ValidationMessage For="() => Treatment.Duration" class="text-danger" />
                </div>

                <button type="submit" class="btn btn-primary">Gem</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/behandlinger">Tilbage</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Treatment? Treatment { get; set; }

    private string? ErrorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Treatment ??= await TreatmentService.GetByIdAsync(Id);

            if (Treatment is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Load failed: {ex.Message}";
        }

        NavigationManager.NavigateTo("/Behandlinger"); // Muligvis ikke nødvendigt
    }

    private void OnInvalidSubmit(EditContext ctx)
    {
        ErrorMessage = "Form is invalid. Please fix validation errors.";
    }

    // Use service to update instead of DbFactory
    private async Task UpdateTreatment()
    {
        try
        {
            await TreatmentService.UpdateTreatmentAsync(Treatment!);
            NavigationManager.NavigateTo("/behandlinger");
        }
        catch (Exception ex)
        {
            // If record no longer exists, navigate to notfound; otherwise rethrow so error surfaces
            try
            {
                var exists = await TreatmentService.GetByIdAsync(Treatment!.Id);
                if (exists is null)
                {
                    NavigationManager.NavigateTo("notfound");
                    return;
                }
            }
            catch
            {
                // ignore lookup errors and rethrow original
            }

            ErrorMessage = $"Save failed: {ex.Message}";
        }
    }
}
