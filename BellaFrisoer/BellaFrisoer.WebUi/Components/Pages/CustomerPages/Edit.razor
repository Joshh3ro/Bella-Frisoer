@page "/kunder/rediger"
@using BellaFrisoer.Application.Interfaces
@using Microsoft.EntityFrameworkCore
@using BellaFrisoer.Domain.Models
@inject NavigationManager NavigationManager
@inject ICustomerService CustomerService
@rendermode InteractiveServer

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Customer</h2>
<hr />
@if (customer is null)
{
    <p><em>Loading...</em></p>
}

else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="customer" OnValidSubmit="UpdateCustomer" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Customer.Id" value="@customer.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="customer.FirstName" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => customer.FirstName" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="phonenumber" class="form-label">PhoneNumber:</label>
                    <InputNumber id="phonenumber" @bind-Value="customer.PhoneNumber" class="form-control" />
                    <ValidationMessage For="() => customer.PhoneNumber" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <InputText id="email" @bind-Value="customer.Email" class="form-control" />
                    <ValidationMessage For="() => customer.Email" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Gem</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/kunder">Tilbage</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Customer? customer { get; set; }

    protected override async Task OnInitializedAsync()
    {
	    customer = await CustomerService.GetCustomerByIdAsync(Id);

        if (customer == null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateCustomer()
    {
	    try
	    {
		    await CustomerService.UpdateCustomerAsync(customer);
	    }
	    catch
	    {
		    throw new Exception("Kunde kunne ikke indlæses.");
	    }

	    NavigationManager.NavigateTo("/kunder");
    }
}
