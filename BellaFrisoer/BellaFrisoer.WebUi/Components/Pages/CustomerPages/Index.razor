@page "/kunder"
@using BellaFrisoer.Application.Interfaces
@using BellaFrisoer.Domain.Models
@using Microsoft.EntityFrameworkCore
@inject ICustomerService CustomerService
@rendermode InteractiveServer

<PageTitle>Kunder</PageTitle>

<h1>Kunder</h1>

<p>
    <a class="btn btn-primary" href="/kunder/opret">Opret Kunde</a>
    <a class="btn btn-secondary" href="/bookings">Bookings</a>
</p>

<input @oninput="OnSearchChanged" class="form-control mb-3" placeholder="Søg Kunder..." />

@if (customers is null)
{
    <p><em>Loading...</em></p>
}
else if (!customers.Any())
{
    <p>Ingen Kunder endnu...</p>
}
else
{
	<quickgrid class="table table-striped table-hover">
		<thead>
		<tr>
			<th>Fornavn:</th>
			<th>Efternavn:</th>
			<th>Telefon Nummer:</th>
			<th>Id:</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var c in customers)
		{
			<tr>
				<td>@(c.FirstName ?? "—")</td>
				<td>@(c.LastName ?? "—")</td>
				<td>@(c.PhoneNumber.ToString() ?? "—")</td>
				<td>@(c.Id.ToString() ?? "—")</td>

				<td>
					<a href="/kunder/detaljer?id=@c.Id" class="btn btn-sm btn-primary">Detaljer</a>
				</td>
			</tr>
		}
		</tbody>
	</quickgrid>
}


@code {

	private List<Customer>? customers;
	private string searchString = string.Empty;

	protected override async Task OnInitializedAsync()
	{
		customers = await CustomerService.GetAllAsync();
	}

	private async Task OnSearchChanged(ChangeEventArgs e)
	{
        searchString = e.Value?.ToString() ?? string.Empty;
        customers = await CustomerService.FilterCustomersAsync(searchString);
	}
}